{% extends "base.html.twig" %}

{% form_theme form "bootstrap_4_layout.html.twig" %}

{% block title %}Mot de passe oublié | Esperer95.app{% endblock %}

{% block body %}

<div class="container">
    <section class="row min-vh-80">
        <div class="form-signin m-auto text-center">
            {% include "model/msgFlash.html.twig" %}
            <h1 class="h3 mb-4 font-weight-normal">Mot de passe oublié</h1>
            <p>Saisissez vos login et adresse e-mail afin de recevoir un e-mail pour réinitialiser votre mot
                de passe.
            </p>

            {{ form_start(form) }}
            {{ form_row(form.username) }}
            {{ form_row(form.email) }}

            <input type="submit" value="Envoyer" id="submit"
                class="btn btn-lg btn-{{ theme_color }} btn-block mb-4 shadow">
            {{ form_end(form) }}
            <a href="{{ path("security_login") }}" class="text-{{ theme_color }} mb-4">Retour à la page de connexion</a>
        </div>
    </section>
</div>

{% endblock %}