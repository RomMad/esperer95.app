{% extends "base.html.twig" %}

{% form_theme form "bootstrap_4_layout.html.twig" %}

{% block title %}Personnalisation du mot de passe | Esperer95.app{% endblock %}

{% block body %}

<div class="container">
    <section class="row min-vh-80">
        <div class="form-signin m-auto text-center">
            {% include "model/msgFlash.html.twig" %}
            <h1 class="h3 mb-4 font-weight-normal">Personnalisation<br /> du mot de passe</h1>
            {{ form_start(form) }}
            <div class="form-group">
                <div class="input-group js-password-group">
                    {{ form_widget(form.password) }}
                    <div class="input-group-append">
                        <span class="input-group-text"><span class="fa fa-eye js-show-password"></span></span>
                    </div>
                    {{ form_help(form.password) }}
                </div>
            </div>
            <div class="form-group">
                <div class="input-group js-password-group">
                    {{ form_widget(form.confirmPassword) }}
                    <div class="input-group-append">
                        <span class="input-group-text"><span class="fa fa-eye js-show-password"></span></span>
                    </div>
                </div>
            </div>
            <button type="submit" id="send" name="send" class="btn btn-lg btn-{{ theme_color }} btn-block shadow mb-4">Envoyer</button>

            {{ form_row(form._token) }}
            {{ form_end(form) }}

        </div>
    </section>
</div>

{% endblock %}

{% block javascripts %}
{{ encore_entry_script_tags("login") }}
{% endblock %}