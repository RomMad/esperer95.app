<h2 class="h5">Suivis d'activité des services</h2>
<ul>
    <li class="mb-2 text-{{ theme_color }}">
        <a class="text-dark" href="{{ path("supports_by_user") }}">Synthèse des suivis en cours</a>
    </li>
    <li class="mb-2 text-{{ theme_color }}">
        <a class="text-dark" href="{{ path("occupancy_services") }}">Taux d'occupation</a>
    </li>
    {% set userServices = app.session.get("userServices") %}
    {% if is_granted("ROLE_SUPER_ADMIN") or 5 in userServices|keys %}
        <li class="mb-2 text-{{ theme_color }}">
            <a class="text-dark" href="{{ path("avdl_supports") }}">Tableau de suivis de l'AVDL</a>
        </li>
    {% endif %}   
</ul>

<hr class="my-3">