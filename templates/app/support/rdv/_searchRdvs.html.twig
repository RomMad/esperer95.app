{% extends "model/_search.html.twig" %}

{% block search_form %}

<div class="form-group col-auto my-1 px-1">{{ form_widget(form.title) }}</div>
{% if is_granted("ROLE_SUPER_ADMIN") %}
    <div class="form-group col-auto my-1 px-1">{{ form_widget(form.service.poles) }}</div>
{% endif %}
{% if form.service.services.vars.choices|length > 1 %}
    <div class="form-group col-auto my-1 px-1">{{ form_widget(form.service.services) }}</div>
{% endif %}
{% if form.service.subServices.vars.choices|length > 1 %}
    <div class="form-group col-auto my-1 px-1">{{ form_widget(form.service.subServices) }}</div>
{% endif %}
{% if form.service.devices.vars.choices|length > 1 %}
    <div class="form-group col-auto my-1 px-1">{{ form_widget(form.service.devices) }}</div>
{% endif %}
<div class="form-group col-auto my-1 px-1">{{ form_widget(form.service.referents) }}</div>
<div class="form-group col-auto my-1 px-1">{{ form_widget(form.fullname) }}</div>
<div class="form-group col-auto my-1 px-1 d-inline-flex" data-toggle="tooltip" data-placement="bottom"
    title="Date de dÃ©but"><span class="my-2 px-1">Entre</span>{{ form_widget(form.date.start) }}
</div>
<div class="form-group col-auto my-1 px-1 d-inline-flex" data-toggle="tooltip" data-placement="bottom"
    title="Date de fin"><span class="my-2 pr-1">et</span>{{ form_widget(form.date.end) }}
</div>
<div class="form-group col-auto my-1 px-1">{{ form_widget(form.status) }}</div>
{% if is_granted("ROLE_SUPER_ADMIN") %}
    <div class="form-group col-auto my-1 px-1">{{ form_widget(form.id) }}</div>
{% endif %}
{% endblock %}