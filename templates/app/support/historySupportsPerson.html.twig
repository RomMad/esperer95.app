    <section>
        <h2 class="h4 my-4">Historique des suivis sociaux</h2>

        <div class="table-responsive">
            <table class="table table-striped table-hover text-dark">
                <thead>
                    <tr>
                        <th scope="col" class="align-middle th-w-20"></th>
                        <th scope="col" class="align-middle th-w-100">Statut</th>
                        <th scope="col" class="align-middle th-date">Date de début</th>
                        <th scope="col" class="align-middle th-date">Date de fin</th>
                        <th scope="col" class="align-middle th-w-150">Travailleur/se social·e</th>
                        <th scope="col" class="align-middle th-w-150">Service (Dispositif)</th>
                        <th scope="col" class="align-middle th-w-100">Pôle</th>
                    </tr>
                </thead>

                <tbody>
                    {% for support in person.supports %}

                    {% if support.supportGroup.referent %}
                    {% set contact_user %}
                    <div class='text-left p-2'>
                        <b>Coordonnées :</b>
                        <br>Téléphone : {{support.supportGroup.referent.phone1}}
                        <br>Email : {{ support.supportGroup.referent.email }}
                    </div>
                    {% endset %}
                    {% endif %}

                    {% set contact_service %}
                    <div class='text-left p-2'>
                        <b>Coordonnées du service: </b>
                        <br>Téléphone : {{ support.supportGroup.service.phone1}}
                        <br>Email : {{ support.supportGroup.service.email }}
                    </div>
                    {% endset %}

                    <tr>
                        <th scope="row">
                            {% if is_granted("VIEW", support.supportGroup) %}
                            <a href="{{ path('support_view', {'id':support.supportGroup.id}) }}"
                                class="btn btn-{{ theme_color }} btn-sm shadow  my-1" data-toggle="tooltip" data-placement="bottom"
                                title="Voir le suivi social"><span class="fas fa-eye"></span>
                            </a>
                            {% else %}
                            <span class="btn btn-{{ theme_color }} btn-sm shadow my-1 cursor-default" data-toggle="tooltip" data-placement="bottom"
                                title="Accès non autorisé"><span class="fas fa-ban"></span>
                            </span>
                            {% endif %}
                            {# {% if is_granted("EDIT", support.supportGroup) %}
                            <a href="{{ path('support_view', {'id':support.supportGroup.id}) }}"
                                class="btn btn-{{ theme_color }} btn-sm shadow my-1" data-toggle="tooltip" data-placement="bottom"
                                title="Editer le suivi social"><span class="fas fa-edit"></span>
                            </a>
                            {% endif %} #}
                        </th>
                        <td>{{ support.statusToString }}</td>
                        <td>{% if support.startDate %}{{ support.startDate|date("d/m/Y") }}{% endif %}</td>
                        <td>{% if support.endDate %}{{ support.endDate|date("d/m/Y") }}{% endif %}</td>
                        <td>
                            {% if support.supportGroup.referent %}
                            <a href="mailto:{{ support.supportGroup.referent.email }}" class="text-{{ theme_color }}" data-toggle="tooltip" data-placement="right"
                                data-html="true"
                                title="{{ contact_user }}">{{ support.supportGroup.referent.firstname }}
                                {{  support.supportGroup.referent.lastname }}</a>
                            {% else %}-{% endif %}
                        </td>
                        <td>
                            {% if support.supportGroup.service %}
                            <a href="mailto:{{ support.supportGroup.service.email }}" class="text-{{ theme_color }}" 
                                data-toggle="tooltip" data-placement="right"data-html="true" 
                                title="{{ contact_service }}">{{ support.supportGroup.service.name }}
                                {% if support.supportGroup.device %} ({{ support.supportGroup.device.name }}){% endif %}</a>
                            {% endif %}
                        </td>
                        <td>{{ support.supportGroup.service.pole.name }}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        {% if group_people is defined %}
        <a href="{{ path('support_new', {'id':group_people.id}) }}" class="m-2 btn btn-{{ theme_color }} btn-sm">
            <span class="fas fa-plus-square pr-2"></span>Créer un nouveau suivi</a>
        {% else %}
        <p class="ml-2 text-secondary"><span class="fas fa-info-circle mr-2"></span>Pour créer un nouveau suivi, aller sur la fiche du groupe (ci-dessous).<p>
        {% endif %}
    </section>