{% extends "base.html.twig" %}
{% import "macros/alertColor.html.twig" as utils %}

{% block title %}Taux d'occupation{{ parent() }}{% endblock %}

{% block body %}

    <div class="container">
        {% include "model/msgFlash.html.twig" %}
        <h1 class="h2 mb-3">Taux d'occupation<span class="fas fa-angle-right fa-xs mx-1"></span><!--
        -->{{ subService ? subService.name : " Groupes de places" }}</h1>
    </div>

    {% include "app/dashboard/searchOccupancy.html.twig" %}

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <p><a href="{{ path('occupancy_sub_services', {'id':subService.service.id}) }}" class="text-{{ theme_color }}"><!--
                --><span class="fas fa-undo mr-2"></span>Retour aux taux d'ocupation du service.</a>
                </p>
                {% set interval = date(start).diff(date(end)) %}
                <p>Période du {{ start|date("d/m/Y") }} au {{ end|date("d/m/Y") }},<!--
                --> soit {{ interval.days }} jour{{ interval.days > 1 ? "s" }}.</p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="table-responsive-sm">
                    <table class="table table-sm table-bordered table-striped table-hover text-dark shadow">
                        <thead>
                            <tr>
                                <th scope="row" class="align-middle th-w-20"></th>
                                <th class="align-middle th-w-150">Groupe de places</th>
                                <th class="align-middle th-w-150">Sous-service (Dispositif)</th>
                                <th class="align-middle th-w-150">Adresse</th>
                                <th class="align-middle th-w-100 text-right">Nombre de places</th>
                                <th class="align-middle th-w-100 text-right">Nb de nuitées théoriques</th>
                                <th class="align-middle th-w-100 text-right">Nb de nuitées réalisées</th>
                                <th class="align-middle th-w-100 text-right">Nb moyen de places/jour</th>
                                <th class="align-middle th-w-100 text-right">Nb moyen de personnes/jour</th>
                                <th class="align-middle th-w-100 text-right">Taux d'occupation</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for accommodationId, accommodation in datas.accommodations %}
                                <tr>
                                    <td scope="row" class="align-middle text-center">
                                        <a href="{{ path('accommodation_edit', {'id': accommodationId}) }}#accommodation_groups" 
                                            class="btn btn-{{ theme_color }} btn-sm shadow" data-placement="bottom" 
                                            title="Voir le groupe de places"><span class="fas fa-eye fa-sm"></span>
                                        </a>
                                    </td>
                                    <td class="align-middle">{{ accommodation.accommodation.name }}</td>
                                    <td class="align-middle">{{ accommodation.accommodation.subService.name }} ({{ accommodation.accommodation.device.name }})</td>
                                    <td class="align-middle">{{ accommodation.accommodation.address }}, {{ accommodation.accommodation.city }}</td>
                                    <td class="align-middle text-right">{{ accommodation.nbPlaces }}</td>
                                    <td class="align-middle text-right">{{ accommodation.capacityDays|number_format(0, ",", " ") }}</td>
                                    <td class="align-middle text-right">{{ accommodation.occupancyDays|number_format(0, ",", " ") }}</td>
                                    <td class="align-middle text-right">{{ accommodation.averageCapacity|round(1, "common") }}</td>
                                    <td class="align-middle text-right">{{ accommodation.averageOccupancy|round(1, "common") }}</td>
                                    {% set ocupancyRate = ((accommodation.occupancyDays / accommodation.capacityDays) * 100)|round(1, "common") %}
                                    <td class="align-middle {{ utils.alert_color(ocupancyRate) }} text-right">
                                    <span class="font-weight-bold font-italic">{{ ocupancyRate }} %</span>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                        <tfoot>
                            <tr class="font-weight-bold">
                                <td scope="row" colspan="4" class="align-middle text-center">Total</td>
                                <td class="align-middle text-right">{{ datas.nbPlaces|number_format(0, ",", " ") }}</td>
                                <td class="align-middle text-right">{{ datas.capacityDays|number_format(0, ",", " ") }}</td>
                                <td class="align-middle text-right">{{ datas.occupancyDays|number_format(0, ",", " ") }}</td>
                                <td class="align-middle text-right">{{ datas.averageCapacity|round(1, "common") }}</td>
                                <td class="align-middle text-right">{{ datas.averageOccupancy|round(1, "common") }}</td>
                                {% set ocupancyRate = datas.capacityDays ? ((datas.occupancyDays / datas.capacityDays) * 100)|round(1, "common") : null %}
                                <td class="align-middle {{ utils.alert_color( ocupancyRate) }} text-right">
                                <span class="font-weight-bold font-italic">{{ ocupancyRate }} %</span>
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags("search") }}
{% endblock javascripts %}