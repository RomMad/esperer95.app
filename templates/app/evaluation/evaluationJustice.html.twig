{% extends "model/collapseCard.html.twig" %}

{% set id = "eval_justice" %}

{% block card_title %}Justice{% endblock %}

{% block card_body %}

<div class="row">
    <div class="col-md-12">
        {% for evalPerson in form.evaluationPeople|filter(evaluationPeople => evaluationPeople.vars.value.supportPerson.head) %}
        <button type="button" class="btn btn-outline-{{ theme_color }} active mb-4">{{ evalPerson.vars.value.supportPerson.person.fullname}}</button>
        <div class="form-group row">
            <div class="col-md-6">{{ form_row(evalPerson.evalJusticePerson.justiceStatus) }}</div>
        </div>
        <div class="form-group row">
            <div class="col-md-12">
            {{ form_label(evalPerson.evalJusticePerson.commentEvalJusticePerson) }}
            {{ form_widget(evalPerson.evalJusticePerson.commentEvalJusticePerson) }}
            </div>
        </div>
        {% endfor %}
    </div>
</div>

{% endblock %}