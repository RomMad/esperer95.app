{% extends "model/collapseCard.html.twig" %}

{% set id = "eval_adm" %}

{% block card_title %}Identit√© - Papier{% endblock %}

{% block card_body %}

	<div class="row">
		<div class="col-md-12 accordion" id="accordion-eval_adm">
			<div class="mb-4">
				{% for key, evalPerson in form.evaluationPeople %}
					{% set person = evalPerson.vars.value.supportPerson.person %}
					<button type="button" id="heading-eval_adm-{{ key }}" class="btn btn-outline-{{ theme_color }} 
						{% if loop.first %}active{% endif %} mb-2 js-person"
						data-toggle="collapse" data-target="#collapse-eval_adm-{{ key }}" aria-expanded="false"
						aria-controls="collapse-eval_adm-{{ key }}" data-key="{{ key }}">{{ person.fullname}}</button>
				{% endfor %}
			</div>
			{% for key, evalPerson in form.evaluationPeople %}
				<div id="collapse-eval_adm-{{ key }}" class="collapse {% if loop.first %}show{% endif %} my-3" 
					aria-labelledby="heading-eval_adm-{{ key }}" data-parent="#accordion-eval_adm" 
					data-support-id="p-{{ evalPerson.vars.value.supportPerson.id }}">
					<div class="form-group row">
						<div class="col-md-6">{{ form_row(evalPerson.evalAdmPerson.nationality) }}</div>
						<div class="col-md-6" data-parent-field="{{ key }}_evalAdmPerson_nationality">
							{{ form_row(evalPerson.evalAdmPerson.arrivalDate) }}</div>
						<div class="col-md-6" data-parent-field="{{ key }}_evalAdmPerson_nationality">
							{{ form_row(evalPerson.evalAdmPerson.country) }}</div>
					</div>
					<div class="form-group row">
						<div class="col-md-6">{{ form_row(evalPerson.evalAdmPerson.paper) }}</div>
						<div class="col-md-6" data-parent-field="{{ key }}_evalAdmPerson_paper">
							{{ form_row(evalPerson.evalAdmPerson.paperType) }}</div>
					</div>
					<div class="form-group row">
						<div class="col-md-6" data-parent-field="{{ key }}_evalAdmPerson_paperType">
							{{ form_row(evalPerson.evalAdmPerson.renewalPermitDate) }}</div>
						<div class="col-md-6" data-parent-field="{{ key }}_evalAdmPerson_paperType">
							{{ form_row(evalPerson.evalAdmPerson.endValidPermitDate) }}</div>
						<div class="col-md-6" data-parent-field="{{ key }}_evalAdmPerson_paperType">
							{{ form_row(evalPerson.evalAdmPerson.nbRenewals) }}</div>
						<div class="col-md-6" data-parent-field="{{ key }}_evalAdmPerson_paperType">
							{{ form_row(evalPerson.evalAdmPerson.workRight) }}</div>
					</div>
					<div class="form-group row">
						<div class="col-md-6" data-parent-field="{{ key }}_evalAdmPerson_nationality">
							{{ form_row(evalPerson.evalAdmPerson.asylumBackground) }}</div>
						<div class="col-md-6" data-parent-field="{{ key }}_evalAdmPerson_asylumBackground">
							{{ form_row(evalPerson.evalAdmPerson.asylumStatus) }}</div>
					</div>
					<div class="form-group row mt-5">
						<div class="col-md-12">{{ form_widget(evalPerson.evalAdmPerson.commentEvalAdmPerson) }}</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>

{% endblock %}
