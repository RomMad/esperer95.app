{% form_theme form "form/bootstrap_4_horizontal.html.twig" %}

    <div id="modal-contribution" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="modalContributionLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="mb-0">Paiement</h2>
            </div>
            {{ form_start(form) }}

            <div class="modal-body pb-0">
                <div class="row">
                    <div class="col-lg-6">{{ form_row(form.type) }}</div>
                    <div class="col-lg-6">
                        <div class="form-group row">
                            {{ form_label(form.month) }}
                            <div class="col-4">{{ form_widget(form.month.month) }}</div>
                            <div class="col-4">{{ form_widget(form.month.year) }}</div>
                            <div class="d-none">{{ form_widget(form.month.day) }}</div>
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-lg-6 js-type-1">{{ form_row(form.salaryAmt) }}</div>
                    <div class="col-lg-6 js-type-1">{{ form_row(form.resourcesAmt) }}</div>
                    <div class="col-lg-6 js-type-1">{{ form_row(form.housingAssitanceAmt) }}</div>
                    <div class="col-lg-6 js-dueAmt d-block">{{ form_row(form.dueAmt) }}</div>
                </div>
                <div class="form-group row">
                    <div class="col-lg-6">{{ form_row(form.paymentDate) }}</div>
                    <div class="col-lg-6">{{ form_row(form.paymentType) }}</div>
                    <div class="col-lg-6">{{ form_row(form.paidAmt) }}</div>
                    <div class="col-lg-6">{{ form_row(form.stillDueAmt) }}</div>
                </div>
                <div class="form-group row js-caution d-none">
                    <div class="col-lg-6">{{ form_row(form.returnDate) }}</div>
                    <div class="col-lg-6">{{ form_row(form.returnAmt) }}</div>
                </div>
                <div class="form-group row">
                    <div class="col-lg-12">{{ form_widget(form.comment) }}</div>
                </div>
            </div>

            <div class="modal-footer d-flex justify-content-between">
              <div class="float-left">
                    <button id="modal-btn-delete" class="mr-3 btn btn-danger d-block" data-placement="bottom"
                        title="Supprimer"><span class="fas fa-trash-alt"></span><span
                        class="sr-only">Supprimer</span></button>
                </div>
                <div class="float-right">
                    <button type="button" id="js-btn-cancel" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                    <button type="submit" id="js-btn-save" class="btn btn-{{ theme_color }}">Enregistrer</button>
                </div>
            </div>
            
            {{ form_row(form._token) }}
            {{ form_end(form, {"render_rest": false}) }}

        </div>
    </div>
</div>