{% extends "model/search.html.twig" %}

{% block search_form %}

<div class="form-group col-auto my-1 px-1">{{ form_row(form.name) }}</div>
<div class="form-group col-auto my-1 px-1">{{ form_row(form.service) }}</div>
<div class="form-group col-auto my-1 px-1">{{ form_row(form.pole) }}</div>
{% if is_granted('ROLE_ADMIN') %}
    <div class="form-group col-auto my-1 px-1">{{ form_row(form.disabled) }}</div>
{% endif %}

{% endblock %}