{% extends "model/search.html.twig" %}

{% block search_form %}
<div class="form-group col-auto my-1 px-1 ">{{ form_row(form.name) }}</div>
{% if form.pole is defined %}
    <div class="form-group col-auto my-1 px-1">{{ form_row(form.pole) }}</div>
{% endif %}
{% if form.service.services.vars.choices|length > 1 %}
    <div class="form-group col-auto my-1 px-1">{{ form_row(form.service.services) }}</div>
{% endif %}
{% if form.service.subServices.vars.choices|length > 1 %}
    <div class="form-group col-auto my-1 px-1">{{ form_row(form.service.subServices) }}</div>
{% endif %}
{% if form.service.devices.vars.choices|length > 1 %}
    <div class="form-group col-auto my-1 px-1">{{ form_row(form.service.devices) }}</div>
{% endif %}
<div class="form-group col-auto my-1 px-1 ">{{ form_row(form.nbPlaces) }}</div>
<div class="form-group col-auto my-1 px-1">{{ form_row(form.supportDates) }}</div>
<div class="form-group col-auto my-1 px-1 d-inline-flex" data-toggle="tooltip" data-placement="bottom"
    title="Date de dÃ©but">
    <span class="my-2 px-1">Entre</span>{{ form_row(form.date.start) }}
</div>
<div class="form-group col-auto my-1 px-1 d-inline-flex" data-toggle="tooltip" data-placement="bottom"
    title="Date de fin">
    <span class="my-2 pr-2">et</span>{{ form_row(form.date.end) }}
</div>
<div class="form-group col-auto my-1 px-1 ">{{ form_row(form.city) }}</div>
{% if is_granted('ROLE_ADMIN') %}
    <div class="form-group col-auto my-1 px-1">{{ form_row(form.disabled) }}</div>
{% endif %}

{% endblock %}