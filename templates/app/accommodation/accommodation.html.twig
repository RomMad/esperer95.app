{% extends "base.html.twig" %}

{% form_theme form "form/bootstrap_4_horizontal.html.twig" %}

{% set accommodation = form.vars.value %}
{% if accommodation.id %}{% set edit_mode = true %}{% else %}{% set edit_mode = false %}{% endif %}

{% block title %}{% if edit_mode %}{{ accommodation.name }}{% else %}Nouveau groupe de places{% endif %} | {{ title_website }}{% endblock %}

{% block body %}

<div class="container">

    <h1 class="h2 mb-3">{{ accommodation.service.name }} : {% if edit_mode %}{{ accommodation.name }}{% else %}Nouveau groupe de places{% endif %}</h1>
    {% if edit_mode %}
    <div class="small text-secondary">
        <p> Créé le {{accommodation.createdAt | date("d/m/Y à H:i") }}
            {% if accommodation.createdBy %}par {{ accommodation.createdBy.fullname }}{% endif %}
            {% if accommodation.updatedAt %}(modifié le {{ accommodation.updatedAt | date("d/m/Y à H:i") }}){% endif %}
        </p>
    </div>
    {% else %}
    <div class="mb-4"></div>
    {% endif %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a class="text-{{ theme_color }}" href="{{ path('services') }}">Liste des
                    services</a></li>
            <li class="breadcrumb-item"><a class="text-{{ theme_color }}"
                    href="{{ path('service_edit', {'id':accommodation.service.id}) }}">{{ accommodation.service.name }}</a></li>
            <li class="breadcrumb-item active" aria-current="page">Groupe de places</li>
        </ol>
    </nav>

    <hr>

    <section>
        {% include "model/msgFlash.html.twig" %}
        <div id="js-msg-flash-content"></div>

        {{ form_start(form) }}

        <div class="form-group row">
            <div class="col-md-6">{{ form_row(form.name) }}</div>
            <div class="col-md-6">{{ form_row(form.service) }}</div>
        </div>
        <div class="form-group row">
            <div class="col-md-6">{{ form_row(form.device) }}</div>
            <div class="col-md-6">{{ form_row(form.placesNumber) }}</div>
        </div>
        <div class="form-group row">
            <div class="col-md-6">{{ form_row(form.openingDate) }}</div>
            <div class="col-md-6">{{ form_row(form.closingDate) }}</div>
        </div>
        <div class="form-group row">
            <div class="col-md-6">{{ form_row(form.location.address) }}</div>
            <div class="col-md-6">{{ form_row(form.location.city) }}</div>
            <div class="col-md-6">{{ form_row(form.location.zipCode) }}</div>
        </div>
        <div class="form-group row">
            <div class="col-md-6">{{ form_row(form.accommodationType) }}</div>
            <div class="col-md-6">{{ form_row(form.configuration) }}</div>
            <div class="col-md-6">{{ form_row(form.individualCollective) }}</div>
        </div>
        <div class="form-group row">
            <div class="col-md-12">{{ form_widget(form.comment) }}</div>
        </div>


        {% if is_granted("EDIT", accommodation.service) %}
        <div class="form-group row">
            <div class="col-md-12">
                {% if edit_mode %}
                <div class="float-left d-flex">
                    <a id="modal-btn-delete" class="mr-3 btn btn-danger d-block" href="{{ path('admin_accommodation_delete', {'id':accommodation.id}) }}"
                        title="Supprimer le groupe de places" data-placement="bottom"
                        onclick="if(window.confirm('Êtes-vous vraiment sûr de vouloir supprimer ce groupe de places ?')){return true;}else{return false;}"><span
                            class="fas fa-trash-alt mr-2"></span>Supprimer</a>
                </div>
                {% endif %}
                <div class="mb-4 float-right">
                    <button type="submit" id="send" name="send" class="btn btn-{{ theme_color }} shadow"><span class="fas fa-save mr-2"></span>Enregistrer</button>
                </div>
            </div>
        </div>
        {% endif %}

        {{ form_row(form._token) }}
        {{ form_end(form, {"render_rest": false}) }}

    </section>
</div>

{% include "app/accommodation/deleteAccommodation.html.twig" %}

{% endblock %}

{% block javascripts %}
{{ encore_entry_script_tags("accommodation") }}
{% endblock javascripts %}