 {% extends "model/collapseCard.html.twig" %}

 {% set id = "listUsers" %}

 {% block card_title %}Indicateurs par travailleur social{% endblock %}

 {% block card_body %}

 <div class="row">
     <div class="col-md-12 table-responsive">
         <table id="table-notes" class="table table-striped table-hover text-dark">
             <thead>
                 <tr>
                     <th scope="col" class="align-middle th-w-20"></th>
                     <th scope="col" class="align-middle th-w-150">Travailleur social</th>
                     <th scope="col" class="align-middle th-w-100">Nb de suivis</th>
                     <th scope="col" class="align-middle th-w-100">Nb de suivis en cours</th>
                     <th scope="col" class="align-middle th-w-100">Nb de notes</th>
                     <th scope="col" class="align-middle th-w-100">Nb de rendez-vous</th>
                 </tr>
             </thead>
             <tbody>
                 {% for user in users %}
                 <tr>
                     <th scope="row" class="align-middle">
                         <a href="#"
                             class="btn btn-{{ theme_color }} btn-sm shadow" data-placement="bottom"
                             title="Voir les suivis du travailleur social"><span class="fas fa-eye"></span>
                         </a>
                     </th>

                     <td class="align-middle">{{ user["name"] }}</td>
                     <td class="align-middle">{{ user["supports"] }}</td>
                     <td class="align-middle">{{ user["activeSupports"] }}</td>
                     <td class="align-middle">{{ user["notes"] }}</td>
                     <td class="align-middle">{{ user["rdvs"] }}</td>
                 </tr>
                 {% endfor %}
             </tbody>
         </table>
     </div>
 </div>

 {% endblock %}