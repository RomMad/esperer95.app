{% extends "base.html.twig" %}

{% set title = app.user.status == 1 ? "Mon espace personnel" : "Tableau de bord" %}

{% block title %}{{ title }} | {{ title_website }}{% endblock %}

{% block stylesheets %}{% endblock %}

{% block body %}

<div class="container">

    <h1 class="h2 mb-3">{{ title }}</h1>
    <p class="small text-secondary">Dernière connexion le {{ app.user.lastLogin|date("d/m/Y à H:i") }}</p>

    {% include "model/msgFlash.html.twig" %}

    <hr>

    <div class="my-4">
        {% if is_granted("ROLE_ADMIN") %}
            {% include "app/managing/managingServices.html.twig" %}
        {% endif %} 
        {% if app.user.status == constant("STATUS_SOCIAL_WORKER", app.user) or supports|length > 0 %}
            {% include "app/home/listSupports.html.twig" %}
            {% include "app/home/listNotes.html.twig" %}
        {% endif %}
        {% include "app/home/listRdvs.html.twig" %}
    </div>

</div>

{% endblock %}

{% block javascripts %}
{{ encore_entry_script_tags("home") }}
{% endblock javascripts %}