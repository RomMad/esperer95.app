{% extends "model/collapseCard.html.twig" %}

{% set id = "listSupports" %}

{% block card_title %}Mes suivis en cours{% endblock %}

{% block card_body %}

<div>
    <div class="row align-items-baseline">
        <div class="col-md-12 count align-middle">
            <p class="align-middle">{{ supports|length }} suivis en cours.</p>
        </div>
    </div>
    <div class="table-responsive">
        <table id="table-supports" class="table table-striped table-hover text-dark">
            <thead>
                <tr>
                    <th scope="col" class="align-middle th-w-20"></th>
                    <th scope="col" class="align-middle th-w-150">Nom et prénom</th>
                    <th scope="col" class="align-middle th-w-100">Typologie familiale</th>
                    <th scope="col" class="align-middle th-w-100">Service (Dispositif)</th>
                    <th scope="col" class="align-middle th-w-100">Statut</th>
                    <th scope="col" class="align-middle th-date">Date de début</th>
                    <th scope="col" class="align-middle th-date">Date de fin</th>
                </tr>
            </thead>
            <tbody>
                {% for support in supports %}
                {# {% cache "referentSupport" ~ user.id ~ support.id support.updatedAt.timestamp %} #}
                 <tr id="support-{{ support.id }}">
                    <td scope="row" class="align-middle">
                        <a href="{{ path('support_view', {'id':support.id}) }}"
                            class="btn btn-{{ theme_color }} btn-sm shadow" data-placement="bottom"
                            title="Voir le suivi social"><span class="fas fa-eye"></span>
                        </a>
                    </td>
                    <td class="align-middle">
                        {% for supportPerson in support.supportPeople|filter(a => a.role != 3) %}
                        {{ supportPerson.person.fullname }}<br />
                        {% endfor %}
                    <td class="align-middle">{{ support.groupPeople.familyTypologyToString }}
                        {% set nbSupportPeople = support.supportPeople|length %}
                        {% if nbSupportPeople > 1 %} | {{ nbSupportPeople }} pers.{% endif %}
                        {% if nbSupportPeople != support.groupPeople.nbPeople %}
                        <span class="fas fa-exclamation-triangle text-warning" title="Le nombre de personnes rattachées au suivi ne correspond pas à la composition familiale."></span>
                        {% endif %}
                    </td>
                    <td class="align-middle">
                        {{ support.service.name }}<br />{% if support.device %}({{ support.device.name }}){% endif %}                    
                    </td>
                    <td class="align-middle">{{ support.statusToString }}</td>
                    <td class="align-middle">{% if support.startDate %}{{ support.startDate| date("d/m/Y") }}{% endif %}
                    <td class="align-middle">{% if support.endDate %}{{ support.endDate| date("d/m/Y") }}{% endif %}
                    </td>
                </tr>
                {# {% endcache %} #}
                {% endfor %}
            </tbody>
        </table>
    </div>
    <a href="{{ path('new_support_search_person') }}" class="m-3 btn btn-{{ theme_color }} btn-sm">
        <span class="fas fa-plus-square mr-2"></span>Créer un nouveau suivi</a>
    <br />
</div>
{% endblock %}