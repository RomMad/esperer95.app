 {% extends "model/collapseCard.html.twig" %}

 {% set id = "indicators" %}

 {% block card_title %}Indicateurs généraux{% endblock %}

 {% block card_body %}

 <div class="row">
     <div class="col-md-6 table-responsive">
         <table id="table-notes" class="table table-striped table-hover text-dark">
             <thead>
                 <tr>
                     <th scope="row" class="align-middle th-w-20"></th>
                     <th class="align-middle th-w-150">Indicateur</th>
                     <th class="align-middle th-w-100  text-right">Nb total</th>
                     <th class="align-middle th-w-100  text-right">Aujourd'hui</th>
                 </tr>
             </thead>
             <tbody>
                 {% for key, value in indicators %}
                 <tr>
                     <td scope="row" class="align-middle"></td>
                     <td class="align-middle">{{ key }}</td>
                     {% if value is iterable %}
                        <td class="align-middle text-right">{{ value["all"]|number_format(0, ",", " ") }}</td>
                        <td class="align-middle text-right">{{ value["today"]|number_format(0, ",", " ") }}</td>
                     {% else %}
                        <td class="align-middle text-right">{{ value|number_format(0, ",", " ") }}</td>
                     {% endif %}
                 </tr>
                 {% endfor %}
             </tbody>
         </table>
     </div>
 </div>

 {% endblock %}