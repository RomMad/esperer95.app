{% extends "base.html.twig" %}

{% form_theme form "form/bootstrap_4_horizontal.html.twig" %}

{% block title %}
Origine de la demande | Esperer95.app
{% endblock %}

{% block body %}

	<div class="container">

		{% set originRequest = form.vars.value %}

		{% set title = "Origine de la demande" %}
		{% include "app/support/navSuppport.html.twig" %}

		{{ form_start(form) }}

		{% include "model/msgFlash.html.twig" %}
		<div id="js-msg-flash-content"></div>

        <div class="form-group row">
            <div class="col-md-6">{{ form_row(form.organization) }}</div>
            <div class="col-md-6">{{ form_row(form.organizationComment) }}</div>
		    <div class="col-md-6">{{ form_row(form.orientationDate) }}</div>
        </div>
        <div class="form-group row">
            <div class="col-md-6">{{ form_row(form.preAdmissionDate) }}</div>
        </div>
        <div class="form-group row">
            <div class="col-md-6">{{ form_row(form.resulPreAdmission) }}</div>
            <div class="col-md-6">{{ form_row(form.decisionDate) }}</div>
        </div>
        <div class="form-group row">
            <div class="col-md-12">{{ form_label(form.comment) }}{{ form_widget(form.comment) }}</div>
        </div>
		<div class="form-group row">
			<div class="col-md-12">
				<div class="mb-4 float-right">
					<button type="submit" id="send" name="send" class="btn btn-{{ theme_color }} shadow"><span class="fas fa-save mr-2"></span>Enregistrer</button>
				</div>
			</div>
		</div>

		{{ form_row(form._token) }}
		{{ form_end(form) }}

	</div>

{% endblock %}

{% block javascripts %}
{% endblock javascripts %}
