{% extends "base.html.twig" %}

{% block title %}Suivis PASH | {{ title_website }}{% endblock %}

{% block body %}

<section class="mt-0">

    <div class="container">
        {% include "model/msgFlash.html.twig" %}
        <h1 class="h2 mb-3">Suivis PASH</h1>
    </div>

    {% include "app/hotelSupport/searchHotelSupports.html.twig" %}

    <div class="container-fluid mt-4">

        <div class="row align-items-baseline">
            <div class="col-md-4 count align-middle mb-2">
                <span class="align-middle">Résultat : {{ supports.getTotalItemCount|number_format(0,'', ' ') }} <!--
                -->suivi{% if supports.getTotalItemCount > 1 %}s{% endif %}.</span>
            </div>
            <div class="col-md-8">
                <div class="navigation">{{ knp_pagination_render(supports) }}</div>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover shadow-sm">
                <thead>
                    <tr>
                        <th scope="col" class="align-middle th-w-20"></th>
                        <th scope="col" class="align-middle th-w-120">{{ knp_pagination_sortable(supports, "Nom et prénom", "p.lastname") }}</th>
                        <th scope="col" class="align-middle th-w-120">{{ knp_pagination_sortable(supports, "Statut", "sg.status") }}</th>
                        <th scope="col" class="align-middle th-w-100">{{ knp_pagination_sortable(supports, "Dispositif", "d.name") }}</th>
                        <th scope="col" class="align-middle th-w-120">{{ knp_pagination_sortable(supports, "Référent·e social·e", "u.lastname") }}</th>
                        <th scope="col" class="align-middle th-w-100">{{ knp_pagination_sortable(supports, "Commune hôtel", "sg.city") }}</th>
                        <th scope="col" class="align-middle th-date">{{ knp_pagination_sortable(supports, "Date de demande", "origin.orientationDate") }}</th>
                        <th scope="col" class="align-middle th-w-100">{{ knp_pagination_sortable(supports, "Orienteur", "orga.name") }}</th>
                        <th scope="col" class="align-middle th-date">{{ knp_pagination_sortable(supports, "Date du diagnostic", "hotelSupport.diagStartDate") }}</th>
                        <th scope="col" class="align-middle th-date">{{ knp_pagination_sortable(supports, "Début de l'accompa-gnement", "hotelSupport.supportStartDate") }}</th>
                        <th scope="col" class="align-middle th-w-100">{{ knp_pagination_sortable(supports, "Niveau d'intervention", "hotelSupport.levelSupport") }}</th>
                        <th scope="col" class="align-middle th-date">{{ knp_pagination_sortable(supports, "Date de signature convention", "hotelSupport.agreementDate") }}</th>
                        <th scope="col" class="align-middle th-date">{{ knp_pagination_sortable(supports, "Ancrage 95", "hotelSupport.departmentAnchor") }}</th>
                        <th scope="col" class="align-middle th-date">{{ knp_pagination_sortable(supports, "Fin de l'accompa-gnement", "hotelSupport.supportEndDate") }}</th>
                        <th scope="col" class="align-middle th-w-100">{{ knp_pagination_sortable(supports, "Motif fin accompa-gnement", "hotelSupport.endSupportReason") }}</th>
                    </tr>
                </thead>
                <tbody>            
                    {% for support in supports %}
                        {% if support.supportPeople|filter(s => s.head == true)|length %}
                            {% set supportPerson = support.supportPeople|filter(s => s.head == true)|first %}
                        {% else %} 
                            {% set supportPerson = support.supportPeople|first %}
                        {% endif %}
                    <tr>
                        <td scope="row" class="align-middle">
                            {% if is_granted("VIEW", support) %}
                            <a href="{% if support.groupPeople %}{{ path('support_view', {'id':support.id}) }} {% endif %}"
                                class="btn btn-{{ theme_color }} btn-sm shadow my-1" data-toggle="tooltip" data-placement="bottom"
                                title="Voir la fiche du suivi"><span class="fas fa-eye"></span>
                            </a>
                            {% endif %}
                        </td>
                        <td class="align-middle">{{ supportPerson.person.fullname }}{{ supportPerson.person.usename ? " (" ~ supportPerson.person.usename ~ ")" }}</td>
                        <td class="align-middle">{{ support.statusToString }}<br/>
                            <span class="text-secondary">{{ support.coefficient ? "(coeff. " ~ support.coefficient ~ ")" }}</span>
                        </td>
                        <td class="align-middle">{{ support.device ? support.device.name }}</td>
                        <td class="align-middle">{{ support.referent ? support.referent.fullname }}</td>
                        <td class="align-middle">{{ support.city }}</td>
                        {% if support.hotelSupport %}
                            {% set hotelSupport = support.hotelSupport %}
                            <td class="align-middle">{{ support.originRequest and support.originRequest.orientationDate ? 
                                support.originRequest.orientationDate|date("d/m/Y") }}</td>
                            <td class="align-middle">{{ support.originRequest and support.originRequest.organization and 
                                support.originRequest.organization ? support.originRequest.organization.name ~ 
                                (hotelSupport.ssd ? " (" ~  hotelSupport.ssd ~ ")") }}</td>
                            <td class="align-middle">{{ hotelSupport.diagStartDate ? hotelSupport.diagStartDate|date("d/m/Y") }}
                                {{ hotelSupport.diagEndDate ? " - " ~ hotelSupport.diagEndDate|date("d/m/Y") }}</td>
                            <td class="align-middle">{{ hotelSupport.supportStartDate ? hotelSupport.supportStartDate|date("d/m/Y") }}</td>
                            <td class="align-middle">{{ hotelSupport.levelSupportToString }}</td>
                            <td class="align-middle">{{ hotelSupport.agreementDate ? hotelSupport.agreementDate|date("d/m/Y") }}</td>
                            <td class="align-middle">{{ hotelSupport.departmentAnchorToString }}</td>
                            <td class="align-middle">{{ hotelSupport.supportEndDate ? hotelSupport.supportEndDate|date("d/m/Y") }}</td>
                            <td class="align-middle">{{ hotelSupport.endSupportReasonToString }}</td>
                        {% else %}
                            <td class="align-middle" colspan="10"></td>
                        {% endif %}
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        
        <div class="navigation">{{ knp_pagination_render(supports) }}</div>

    </div>

</section>

{% endblock %}

{% block javascripts %}
{{ encore_entry_script_tags("search") }}
{% endblock javascripts %}