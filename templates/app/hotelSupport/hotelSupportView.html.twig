    {% import "macros/viewDiv.html.twig" as divElt %}

<div class="row">
    <div class="col-md-6 mb-1 py-2">
        <span class="py-2 text-secondary">Service (dispositif) : </span>
        <a href="{{ path('service_edit', {'id': support.service.id }) }}" class="text-{{ theme_color }}">
            {{ support.service.name }}</a>
            <span>{{ support.subService ? " | " ~ support.subService.name }}</span>
        <span>{{ support.device ? " (" ~ support.device.name ~ ")" }}</span>
    </div>
    {{ divElt.get(support.statusToString ~ (support.endStatus ? " (" ~ support.endStatusToString ~ ")" : "" ), "Status") }}
    {{ divElt.get(support.startDate ? support.startDate|date("d/m/Y") 
        ~ (support.endDate ? " - " ~ support.endDate|date("d/m/Y") : "") : "", "Date de suivi") }}
    {{ divElt.get(support.referent ? support.referent.fullname ~ (support.referent2 ? " (" 
        ~ support.referent2.fullname ~ ")" : "") : "", "Referent") }}
</div>

{% set originRequest = support.originRequest %}
{% if originRequest %}
    <div class="row my-2">
        {{ divElt.get(originRequest.organization ? originRequest.organization.name ~ (originRequest.organizationComment ? " (" 
            ~ originRequest.organizationComment ~ ")" : "") : "", "Organization", "forms") }}
        {{ divElt.get(originRequest.orientationDate ? originRequest.orientationDate|date("d/m/Y"), "Orientation date", "forms") }}
    </div>
{% endif %}

{% set hotelSupport = support.hotelSupport %}

{% if hotelSupport %}
    <div class="row my-2">
        {{ divElt.get(hotelSupport.entryHotelDate ? hotelSupport.entryHotelDate|date("d/m/Y"), "Entry hotel date") }}
        {{ divElt.get(hotelSupport.originDept, "Origin dept") }}
        {{ divElt.get(hotelSupport.gipId, "Gip id") }}
        {{ originRequest ? divElt.get(originRequest.comment, "Comment") }}
    </div>

    {% if support.accommodationGroups|length %}
        <div class="row my-2">
            {{ divElt.get(support.accommodationGroups[0].accommodation ? support.accommodationGroups[0].accommodation.name  
                ~ " (" ~ support.address ~ ", " ~ support.city ~ ")", "Hotel") }}
            {{ divElt.get(support.accommodationGroups[0].comment, "Comment") }}
        </div>
    {% endif %}

    <div class="my-2">
        <div class="row">
            {{ divElt.get(support.startDate ? support.startDate|date("d/m/Y") 
                ~ (support.endDate ? " - " ~ support.endDate|date("d/m/Y") : "") : "", "support.dates") }}
            {{ divElt.get(hotelSupport.evaluationDate ? hotelSupport.evaluationDate|date("d/m/Y") : "", "hotelSupport.evaluation") }}
        </div>
        <div class="row">
            {{ divElt.get(hotelSupport.levelSupportToString, "hotelSupport.levelSupport") }}
            {{ divElt.get(hotelSupport.agreementDate ? hotelSupport.agreementDate|date("d/m/Y"), "hotelSupport.agreementDate") }}
        </div>
        <div class="row">
            {{ divElt.get(hotelSupport.departmentAnchorToString, "hotelSupport.departmentAnchor") }}
            {{ divElt.get(hotelSupport.recommendationToString, "hotelSupport.recommendation") }}
        </div>
        <div class="row">
            {{ divElt.get(support.comment, "Comment") }}
        </div>
    </div>
{% endif %}

<div class="row">
    {{ divElt.get(support.coefficient ? support.coefficient, "Coefficient") }}
</div>