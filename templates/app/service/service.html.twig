{% extends "base.html.twig" %}

{% form_theme form "form/bootstrap_4_horizontal.html.twig" %}

{% set service = form.vars.value %}
{% set disabled = service.isDisabled %}
{% set EDIT_MODE = service.id != null %}
{% set YES = 1 %}
{% set title = EDIT_MODE ? service.name ~ (disabled ? ' (désactivé)') : 'Nouveau service' %}

{% block title %}{{ title }}{{ parent() }}{% endblock %}

{% block body %}

    <div class="container">

        {{ form_start(form) }}
        
        <section>
            <h1 class="h2 mb-3">{{ title }}</h1>
            {% if EDIT_MODE %}
                <div class="small text-secondary">
                    <p> Créé le {{service.createdAt|date("d/m/Y à H:i") }}{{ service.createdBy ? " par " ~ service.createdBy.fullname }}
                        {% if service.updatedAt %}(modifié le {{ service.updatedAt|date("d/m/Y à H:i") }}{{ service.updatedBy ? " par " ~ service.updatedBy.fullname }}{% endif %})
                    </p>
                </div>
            {% else %}
                <div class="mb-4"></div>
            {% endif %}
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a class="text-{{ theme_color }}" href="{{ path('services') }}">Liste des services</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Fiche service</li>
                </ol>
            </nav>
            
            <hr>

            {% include "model/msgFlash.html.twig" %}
            <div id="js-msg-flash-content"></div>

            <div class="form-group row">
                <div class="col-md-6">{{ form_row(form.name) }}</div>
                <div class="col-md-6">{{ form_row(form.pole) }}</div>
            </div>
            <div class="form-group row">
                <div class="col-md-6">{{ form_row(form.phone1) }}</div>
                <div class="col-md-6">{{ form_row(form.email) }}</div>
            </div>
            <div class="form-group row">
                <div class="col-md-6">{{ form_row(form.chief) }}</div>
            </div>
            <div class="form-group row" id="service_location">
                <div class="col-md-6">{{ form_row(form.location.search) }}</div>
                <div class="col-md-6">{{ form_row(form.location.address) }}</div>
                <div class="col-md-6">{{ form_row(form.location.city) }}</div>
                <div class="col-md-6">{{ form_row(form.location.zipcode) }}</div>
            </div>
            <div class="form-group row">
                <div class="col-md-6">{{ form_row(form.finessId) }}</div>
                <div class="col-md-6">{{ form_row(form.siretId) }}</div>
            </div>
            <div class="form-group row">
                <div class="col-md-6">{{ form_row(form.startDate) }}</div>
                <div class="col-md-6">{{ form_row(form.endDate) }}</div>
            </div>
            <div class="row">
                <div class="col-md-12"><h2 class="h4 mb-3">Type d'activités :</h2></div>
            </div>
            <div class="form-group row">
                <div class="col-md-6">{{ form_row(form.preAdmission) }}</div>
                <div class="col-md-6">{{ form_row(form.justice) }}</div>
            </div>
            <div class="form-group row">
                <div class="col-md-6">{{ form_row(form.accommodation) }}</div>
                <div class="col-md-6">{{ form_row(form.contribution) }}</div>
                <div class="col-md-6" data-parent-field="contribution">{{ form_row(form.contributionType) }}</div>
                <div class="col-md-6" data-parent-field="contributionType">{{ form_row(form.contributionRate) }}</div>
            </div>
            <div class="form-group row">
                <div class="col-md-12">{{ form_widget(form.comment) }}</div>
            </div>
            {% if is_granted("EDIT", service) %}
                <div class="form-group row">
                    <div class="col-md-12">
                        {% if EDIT_MODE and is_granted("DISABLE", service) %}
                            <div class="float-left d-flex">
                                <a class="mr-3 btn btn-{{ disabled ? 'success' : 'danger' }} d-block" href="{{ path('service_disable', {'id':form.vars.value.id}) }}"
                                    title="{{ disabled ? 'Réactiver' : 'Désactiver' }} le service" data-toggle="tooltip" data-placement="bottom"
                                    {% if disabled == false %}onclick="if(window.confirm('Êtes-vous vraiment sûr de vouloir désactiver ce service ?')){return true;}else{return false;}"{% endif %}>
                                    {% if disabled %}Réactiver{% else %}Désactiver{% endif %}</a>
                            </div>
                        {% endif %}
                        <div class="float-right">
                            <button type="submit" id="send" name="send" class="btn btn-{{ theme_color }} shadow">{% if EDIT_MODE %}Mettre à jour{% else %}Enregistrer{% endif %}</button>
                        </div>
                    </div>
                </div>
            {% endif %}
        </section>

        {% if EDIT_MODE == true %}
            <hr>
            <section>
                <h2 class="h4 my-4">Sous-services</h2>
                {% if subServices|length > 0 %}
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-hover text-dark shadow-sm">
                            <thead>
                                <tr>
                                    <th scope="col" class="align-middle th-w-20"></th>
                                    <th scope="col" class="align-middle th-w-140">{{ "Name"|trans([], "forms") }}</th>
                                    <th scope="col" class="align-middle th-w-140">{{ "subService.chief"|trans([], "forms") }}</th>
                                    <th scope="col" class="align-middle th-w-140">{{ "Phone"|trans([], "forms") }}</th>
                                    <th scope="col" class="align-middle th-w-140">{{ "Email"|trans([], "forms") }}</th>
                                    <th scope="col" class="align-middle th-w-20"></th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for subService in subServices %}
                                    <tr class="{% if subService.disabled %}text-secondary{% endif %}">
                                        <td class="align-middle" scope="row">
                                            {% if is_granted("EDIT", service) %}
                                            <a href="{{ path('sub_service_edit', {'id':subService.id}) }}" class="btn btn-{{ theme_color }} btn-sm shadow" 
                                                data-toggle="tooltip" data-placement="bottom" title="Voir la fiche du sous-service"><span class="fas fa-eye"></span>
                                            </a>                    
                                            {% endif %}
                                        </td>
                                        <td class="align-middle">{% if subService.disabled %}<del>{{ subService.name  }}</del> (désactivé){% else %}{{ subService.name }}{% endif %}</td>
                                        <td class="align-middle">{{ subService.chief ? subService.chief.fullname }}</td>
                                        <td class="align-middle">{{ subService.phone1}}</td>
                                        <td class="align-middle">{{ subService.email }}</td>
                                        <td class="align-middle">
                                            {% if is_granted("DISABLE", service) %}
                                                <a id="modal-btn-disable" class="mr-3 btn btn-danger" href="{{ path('sub_service_disable', {'id':subService.id}) }}"
                                                    title="Supprimer le sous-service" data-toggle="tooltip" data-placement="bottom"
                                                    onclick="if(window.confirm('Êtes-vous vraiment sûr de vouloir supprimer ce sous-service ?')){return true;}else{return false;}">
                                                    <span class="fas fa-trash-alt"></span>
                                                </a>
                                            {% endif %}
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                <p>Aucun sous-service.<p>
                {% endif %}
                {% if is_granted("EDIT", service) %}
                    <div class="row">
                        <div class="col-md-12">
                            <a href="{{ path('sub_service_new', {'id':service.id}) }}" class="btn btn-{{ theme_color }} btn-sm shadow"><span
                                class="fas fa-plus-square pr-2"></span>Créer un sous-service</a>
                        </div>
                    </div>
                {% endif %}
            </section>
        {% endif %}

        {% if is_granted("EDIT", service) %}
            <hr>
            <section>
                <h2 class="h4 mb-4">Dispositif(s) rattaché(s)</h2>
                <div class="row">
                    <div class="col-md-6">
                        <div class="table-responsive table-sm">
                            <table id="function-table" class="table">
                                <thead>
                                    <tr>
                                        <th scope="col" class="align-middle th-w-150">Dispositif</th>
                                        <th scope="col" class="align-middle th-w-20"></th>
                                    </tr>
                                </thead>
                                <tbody id="serviceDevices-fields-list"
                                    data-prototype="<td class='align-middle'>{{ form_widget(form.serviceDevices.vars.prototype.device)|e }}</td>"
                                    data-widget-tags="<tr></tr>" data-widget-counter="{{ form.serviceDevices|length }}">
                                    {% for serviceDevice in form.serviceDevices %}
                                    <tr id="{{ serviceDevice.vars.id }}">
                                        <td>{{ form_widget(serviceDevice.device) }}</td>
                                        <td class="align-middle">
                                            <button class="btn btn-danger js-remove"><span class="fas fa-trash-alt"></span></button>
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="my-2">
                    <button type="button" class="add-another-collection-widget btn btn-{{ theme_color }}"
                        data-list-selector="#serviceDevices-fields-list"><span class="fas fa-plus-square mr-2"></span>Ajouter un dispositif</button>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="float-right mb-2">
                            <button type="submit" class="btn btn-{{ theme_color }}">Enregistrer</button>
                        </div>
                    </div>
                </div>
                
            </section>
            {% if form.organizations is defined and is_granted("ROLE_SUPER_ADMIN") %}
                <hr>
                <section>

                    <h2 class="h4 mb-4">Services prescripteurs(s) rattachés</h2>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="table-responsive table-sm">
                                <table id="function-table" class="table">
                                    <thead>
                                        <tr>
                                            <th scope="col" class="align-middle th-w-150">Dispositif</th>
                                            <th scope="col" class="align-middle th-w-20"></th>
                                        </tr>
                                    </thead>
                                    <tbody id="organizations-fields-list"
                                        data-prototype="<td class='align-middle'>{{ form_widget(form.organizations.vars.prototype.organization)|e }}</td>"
                                        data-widget-tags="<tr></tr>" data-widget-counter="{{ form.organizations|length }}">
                                        {% for organization in form.organizations %}
                                            <tr id="{{ organization.vars.id }}">
                                                <td>{{ form_widget(organization.name) }}</td>
                                                <td class="align-middle">
                                                    <button class="btn btn-danger js-remove"><span class="fas fa-trash-alt"></span></button>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="my-2">
                        <button type="button" class="add-another-collection-widget btn btn-{{ theme_color }}"
                            data-list-selector="#organizations-fields-list"><span class="fas fa-plus-square mr-2"></span>Ajouter un dispositif</button>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="float-right mb-2">
                                <button type="submit" class="btn btn-{{ theme_color }}">Enregistrer</button>
                            </div>
                        </div>
                    </div>
                    
                </section>
            {% endif %}
        {% endif %}

        {{ form_row(form._token) }}
        {{ form_end(form, {"render_rest": false}) }}

        {% if EDIT_MODE %}
            <hr>
            {# {% if service.accommodation == YES %} #}
            <section>
                {% set nbAccommodations = accommodations|length %}
                <h2 class="h4 my-4">Groupes de places rattachés</h2>
                <p class="align-middle">{{ nbAccommodations }} groupe{{ nbAccommodations > 0 ? 's' }}<!--
                    -->{{ nbPlaces > 0 ? ' (' ~ nbPlaces ~ ' places)' }}.</p>

                {% if nbAccommodations > 0 and is_granted("VIEW", accommodations[0]) %}
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-hover text-dark shadow-sm">
                            <thead>
                                <tr>
                                    <th scope="col" class="align-middle th-w-20"></th>
                                    <th scope="col" class="align-middle th-w-150">Nom du groupe de places</th>
                                    <th scope="col" class="align-middle th-w-100">Dispositif</th>
                                    <th scope="col" class="align-middle th-w-80">Nombre de places</th>
                                    <th scope="col" class="align-middle th-date">Date d'ouverture</th>
                                    <th scope="col" class="align-middle th-date">Date de fermeture</th>
                                    <th scope="col" class="align-middle th-w-100">Ville</th>
                                    <th scope="col" class="align-middle th-w-60">Code postal</th>
                                    <th scope="col" class="align-middle th-w-150">Adresse</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for accommodation in accommodations %}
                                    <tr class="{% if accommodation.disabled %}text-secondary{% endif %}">
                                        <td scope="row" class="align-middle">
                                            <a href="{{ path('accommodation_edit', {'id':accommodation.id}) }}"
                                                class="btn btn-{{ theme_color }} btn-sm shadow" data-toggle="tooltip" 
                                                data-placement="bottom" title="Voir le groupe de places">
                                                <span class="fas fa-eye"></span>
                                            </a>
                                        </td>
                                        <td class="align-middle">{% if accommodation.disabled %}<del>{{ accommodation.name }}</del> (désactivé){% else %}{{ accommodation.name }}{% endif %}</td>
                                        <td class="align-middle">{{ accommodation.device ? accommodation.device.name }}</td>
                                        <td class="align-middle">{{ accommodation.nbPlaces }}</td>
                                        <td class="align-middle">{{ accommodation.startDate ? accommodation.startDate|date("d/m/Y") }}</td>
                                        <td class="align-middle">{{ accommodation.endDate ? accommodation.endDate|date("d/m/Y") }}</td>
                                        <td class="align-middle">{{ accommodation.city|capitalize }}</td>
                                        <td class="align-middle">{{ accommodation.zipcode }}</td>
                                        <td class="align-middle">{{ accommodation.address }}</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% endif %}
                {% if is_granted("EDIT", service) %}
                    <div class="row my-3">
                        <div class="col-md-12">
                            <a href="{{ path('service_accommodation_new', {'id':service.id}) }}" class="btn btn-{{ theme_color }} btn-sm shadow">
                            <span class="fas fa-plus-square pr-2"></span>Créer un nouveau groupe de places</a>
                        </div>
                    </div>
                {% endif %}
            </section>
            <hr>
            {# {% endif %} #}

            <section>
                <h2 class="h4 my-4">Utilisateurs rattachés</h2>
                    <p class="align-middle">{{ users|length }} utilisateur{{ users|length > 1 ? 's' }}.</p>
                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-hover text-dark shadow-sm">
                        <thead>
                            <tr>
                                <th scope="col" class="align-middle th-w-20"></th>
                                <th scope="col" class="align-middle th-w-150">Prénom</th>
                                <th scope="col" class="align-middle th-w-140">Nom</th>
                                <th scope="col" class="align-middle th-w-140">Fonction</th>
                                <th scope="col" class="align-middle th-w-140">Téléphone</th>
                                <th scope="col" class="align-middle th-w-140">Email</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for user in users %}
                            <tr>
                                <td scope="row">
                                    {% if is_granted("EDIT", user) %}
                                        <a href="{{ path('security_user', {'id':user.id}) }}" class="btn btn-{{ theme_color }} btn-sm shadow" 
                                            data-toggle="tooltip" data-placement="bottom" title="Voir la fiche du service"><span class="fas fa-eye"></span>
                                        </a>
                                    {% else %}
                                        <span class="btn btn-{{ theme_color }} btn-sm shadow cursor-default"><span class="fas fa-ban"></span></span>                           
                                    {% endif %}
                                </td>
                                <td class="align-middle">{{ user.firstname }}</td>
                                <td class="align-middle">{{ user.lastname }}</td>
                                <td class="align-middle">{{ user.statusToString }}</td>
                                <td class="align-middle">{{ user.phone1}}</td>
                                <td class="align-middle">{{ user.email }}</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>

                {% if is_granted("EDIT", service) %}
                <div class="row">
                    <div class="col-md-12">
                        <a href="{{ path('security_registration') }}" class="btn btn-{{ theme_color }} btn-sm shadow"><span
                            class="fas fa-plus-square pr-2"></span>Créer un nouvel utilisateur</a>
                    </div>
                </div>
                {% endif %}

            </section>
        {% endif %}
    </div>

{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags("service") }}
{% endblock javascripts %}