{% extends "model/search.html.twig" %}

{% block search_form %}
<div class="form-group col-auto my-1 px-1 ">{{ form_row(form.lastname) }}</div>
<div class="form-group col-auto my-1 px-1">{{ form_row(form.firstname) }}</div>
<div class="form-group col-auto my-1 px-1">{{ form_row(form.status) }}</div>
<div class="form-group col-auto my-1 px-1">
    <div class="input-group">
        <div class="input-group-prepend">
            <div class="input-group-text d-none d-sm-block" data-toggle="tooltip" data-placement="bottom"
                title="Téléphone">
                <span class=" fas fa-phone text-black-50"></span>
            </div>
        </div>
        {{ form_row(form.phone) }}
    </div>
</div>
<div class="form-group col-auto my-1 px-1">{{ form_row(form.service) }}</div>
<div class="form-group col-auto my-1 px-1">{{ form_row(form.pole) }}</div>
{% if disabled_users %}
<div class="form-group col-auto my-1 px-1 d-inline-flex">
    <div class="custom-control custom-checkbox custom-checkbox-{{ theme_color }} pl-2 py-2 text-dark"
        data-placement="bottom" title="Utilisateur actif">{{ form_row(form.disabled) }}
    </div>
</div>
{% endif %}
{% endblock %}